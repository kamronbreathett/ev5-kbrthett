<h1><%= @team.name %> Roster</h1>

<div class="table-responsive">
  <table class="table table-hover">

    <thead class="table-primary">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Position</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.first_name %></td>
          <td><%= player.last_name %></td>
          <td><%= player.position %></td>
          <td class="text-nowrap">
            <%= link_to 'Show', team_player_path(player) %> |
            <%= link_to 'Edit', edit_team_player_path(player) %> |
            <%= button_to 'Delete', player_path(player), method: :delete, data: { turbo: false }, class: 'btn btn-link p-0 pb-1', form: { class: 'd-inline' }  %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>
</p>
